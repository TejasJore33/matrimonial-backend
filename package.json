    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",

    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.25",
    "@types/nodemailer": "^6.4.14",
